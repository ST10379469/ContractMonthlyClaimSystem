@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Academic Claims Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #6c757d;
            --gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
        }

        .brand {
            text-align: center;
            margin-bottom: 2rem;
        }

            .brand i {
                font-size: 3rem;
                background: var(--gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 1rem;
            }

            .brand h1 {
                font-weight: 700;
                color: #343a40;
                margin-bottom: 0.5rem;
            }

            .brand p {
                color: #6c757d;
                font-size: 1.1rem;
            }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
            }

        .btn-login {
            background: var(--gradient);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
            }

        .demo-accounts {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-top: 2rem;
        }

            .demo-accounts h6 {
                color: #495057;
                margin-bottom: 1rem;
            }

        .demo-account {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.5rem;
            border-left: 4px solid var(--primary);
        }

            .demo-account:last-child {
                margin-bottom: 0;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand">
            <i class="fas fa-file-invoice-dollar"></i>
            <h1>Academic Claims</h1>
            <p>Monthly Contract Claim System</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Role" class="form-label fw-semibold">Login As</label>
                <select asp-for="Role" class="form-select">
                    <option value="@UserRole.Lecturer">📚 Lecturer</option>
                    <option value="@UserRole.Coordinator">👨‍💼 Coordinator</option>
                    <option value="@UserRole.Manager">💼 Manager</option>
                </select>
            </div>

            <button type="submit" class="btn btn-login text-white w-100">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </button>
        </form>

        <div class="demo-accounts">
            <h6 class="text-center"><i class="fas fa-info-circle me-2"></i>Demo Accounts</h6>

            <div class="demo-account">
                <small class="fw-bold text-primary">Lecturer Account</small><br>
                <small>Email: lecturer@university.edu | Password: demo123</small>
            </div>

            <div class="demo-account">
                <small class="fw-bold text-warning">Coordinator Account</small><br>
                <small>Email: coordinator@university.edu | Password: demo123</small>
            </div>

            <div class="demo-account">
                <small class="fw-bold text-success">Manager Account</small><br>
                <small>Email: manager@university.edu | Password: demo123</small>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>