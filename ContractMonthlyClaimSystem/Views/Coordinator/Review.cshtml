@model ReviewViewModel
@using ContractMonthlyClaimSystem.Models
@{
    ViewData["Title"] = "Review Claim";
}

<h2>Review Claim - @Model.Claim.Month/@Model.Claim.Year</h2>
<h4>Submitted by: @Model.Claim.UserId</h4>

<div class="card mb-4">
    <div class="card-header">
        <h5>Claim Details</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Module</th>
                        <th>Description</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Claim.ClaimItems)
                    {
                        <tr>
                            <td>@item.Date.ToString("d")</td>
                            <td>@item.HoursWorked</td>
                            <td>@item.Module</td>
                            <td>@item.Description</td>
                            <td>@item.Amount.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <h5 class="mt-3">Total Amount: @Model.Claim.TotalAmount.ToString("C")</h5>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Supporting Documents</h5>
    </div>
    <div class="card-body">
        @foreach (var doc in Model.Claim.SupportingDocuments)
        {
            <div><a href="#" class="text-primary">@doc.FileName</a></div>
        }
        @if (!Model.Claim.SupportingDocuments.Any())
        {
            <p class="text-muted">No documents uploaded</p>
        }
    </div>
</div>

<form asp-action="Review" method="post">
    <input type="hidden" name="id" value="@Model.Claim.Id" />

    <div class="form-group mb-3">
        <label for="notes" class="form-label">Notes (Optional)</label>
        <textarea name="notes" class="form-control" rows="3"></textarea>
    </div>

    <div class="btn-group">
        <button type="submit" name="action" value="approve" class="btn btn-success">Approve</button>
        <button type="submit" name="action" value="reject" class="btn btn-danger">Reject</button>
        <button type="submit" name="action" value="requestChanges" class="btn btn-warning">Request Changes</button>
    </div>
</form>