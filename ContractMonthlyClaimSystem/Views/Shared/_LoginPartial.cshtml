@using ContractMonthlyClaimSystem.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Simulate user authentication - in real app, this would come from Identity
    var userRole = Context.Session.GetString("UserRole") ?? "Lecturer";
    var userEmail = Context.Session.GetString("UserEmail") ?? "user@university.edu";
}

<ul class="navbar-nav">
    @if (userEmail != null)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @userEmail
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>